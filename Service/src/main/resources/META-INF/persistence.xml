<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SRP_PU" transaction-type="JTA">
    <jta-data-source>java:/MySqlDS</jta-data-source>
    <class>domain.Katedra</class>
    <class>domain.Korisnik</class>
    <class>domain.Nastavnik</class>
    <class>domain.NastavnikNaPredmetu</class>
    <class>domain.OsobaUVeziSaUdzbenikom</class>
    <class>domain.Predmet</class>
    <class>domain.PredmetNaStudijskomProgramu</class>
    <class>domain.Status</class>
    <class>domain.StudijskiProgram</class>
    <class>domain.TematskaCelina</class>
    <class>domain.TipNastave</class>
    <class>domain.Udzbenik</class>
    <class>domain.Uloga</class>
    <class>domain.UlogaUdzbenik</class>
    <class>domain.VrstaINivoStudija</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
